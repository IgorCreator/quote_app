<div class="container">
  <div class="d-flex row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @author %>
      <%= form_with(model: @author, class: "shadow p-3 mb-3 bg-secondary bg-gradient rounded", local: true) do |f| %>

        <div class="form-group row">
          <div class="col-md-4">
            <%= f.label :first_name, class: "form-label text-light" %>
            <%= f.text_field :first_name, class: "form-control shadow rounded", placeholder: "First name" %>
          </div>
          <div class="col-md-4">
            <%= f.label :middle_name, class: "form-label text-light" %>
            <%= f.text_field :middle_name, class: "form-control shadow rounded", placeholder: "Middle name" %>
          </div>
          <div class="col-md-4">
            <%= f.label :last_name, class: "form-label text-light" %>
            <%= f.text_field :last_name, class: "form-control shadow rounded", placeholder: "Last name" %>
          </div>
        </div>

        <div class="d-flex form-group justify-content-center m-2">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
    <div class="d-flex justify-content-center">
      <%= link_to '[ Cancel and return to authors listing ]', authors_path, class: "text-info" %>
    </div>
  </div>

</div>
