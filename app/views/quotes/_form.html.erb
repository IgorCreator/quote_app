<% if @quote.errors.any? %>
  <h2>The following errors prevented the quote from being saved</h2>
  <ul>
    <% @quote.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: @quote, local: true) do |f| %>
  <p>
    <%= f.label :content %><br/>
    <%= f.text_area :content %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
