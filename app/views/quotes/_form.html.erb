<div class="container">
  <div class="d-flex row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @quote %>
      <%= form_with(model: @quote, class: "shadow p-3 mb-3 bg-secondary bg-gradient rounded", local: true) do |f| %>
        <div class="form-group row">
          <div class="col-2">
            <%= f.label :content, class: "col-form-label text-light" %>
          </div>
          <div class="col-10">
            <%= f.text_area :content, rows: 5, class: "form-control shadow rounded", placeholder: "Content of quote" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :author, class: "col-2 col-form-label text-light" %><br/>
          <div class="col-10">
            <%= f.collection_select(
                  :author_id, Author.all, :id, :full_name,
                  { prompt: "Please choose author (can't be empty)"},
                  {
                    class: "form-select shadow rounded",
                    placeholder: "Please choose Author (can't be empty)"
                  })
            %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :category, class: "col-2 col-form-label text-light" %><br/>
          <div class="col-10">
            <%= f.collection_select(
                  :category_ids, Category.all, :id, :name,
                  { prompt: "Make your selection from the list below (can be empty)"},
                  {
                    multiple: true,
                    class: "form-select shadow rounded",
                    placeholder: "Make your selection from the list below (can be empty)"
                  })
            %>
          </div>
        </div>

        <div class="d-flex form-group justify-content-center m-2">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
    <div class="d-flex justify-content-center">
      <%= link_to '[ Cancel and return to quotes listing ]', quotes_path, class: "text-info" %>
    </div>
  </div>

</div>
