<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
      <div class="card text-center shadow mb-5 bg-white rounded">
        <div class="card-body">
          <h4 class="card-text mt-4">Please upload file with Quotes</h4>
          <div class="d-flex justify-content-start">
            Please take correctly formatted file from: [
            <a href="https://www.kaggle.com/datasets/akmittal/quotes-dataset">
              Kaggle: Collection of quotes
            </a>
            ]
          </div>
          <%= form_tag({ controller: :quotes, action: :upload }, { multipart: true, method: :post, local: true }) do |f| %>
            <%= file_field_tag 'file', accept: 'application/json', class: "form-control" %>
            <%= submit_tag "Upload", class: 'btn btn-success btn-lg m-2' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
