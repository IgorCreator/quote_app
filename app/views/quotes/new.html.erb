<h1>Add a new quote</h1>

<% if @quote.errors.any? %>
  <h2>The following errors prevented the article from being saved</h2>
  <ul>
    <% @quote.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with scope: :quote, url: quotes_path, local: true do |f| %>

  <p>
    <%= f.label :content %><br/>
    <%= f.text_area :content %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
